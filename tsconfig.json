{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "lib": ["es6", "dom"],
      "allowJs": true,
      "noEmit": true,
  
      "noImplicitAny": true,
      "strictNullChecks": true,
  
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": false,
  
      "baseUrl": ".",
      "paths": {
        "/*": ["*"]
      },
      "moduleResolution": "node",
      "types": ["node", "mocha"]
    },
    "exclude": [
      "./.meteor/**",
      "./packages/**"
    ]
  }
  